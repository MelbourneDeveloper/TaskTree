{
  "name": "commandtree",
  "displayName": "CommandTree",
  "description": "Unified command runner: discover shell scripts, npm scripts, Makefiles, launch configs, VS Code tasks and more in one filterable tree",
  "version": "0.2.0",
  "author": "Christian Findlay",
  "license": "MIT",
  "publisher": "nimblesite",
  "repository": {
    "type": "git",
    "url": "https://github.com/MelbourneDeveloper/CommandTree.git"
  },
  "homepage": "https://github.com/MelbourneDeveloper/CommandTree#readme",
  "bugs": {
    "url": "https://github.com/MelbourneDeveloper/CommandTree/issues"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "commands",
    "runner",
    "npm",
    "makefile",
    "shell",
    "scripts",
    "launch"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commandtree-container",
          "title": "CommandTree",
          "icon": "activitybar-icon.svg"
        }
      ]
    },
    "views": {
      "commandtree-container": [
        {
          "id": "commandtree-quick",
          "name": "CommandTree - Quick Launch",
          "contextualTitle": "CommandTree - Quick Launch"
        },
        {
          "id": "commandtree",
          "name": "CommandTree - All",
          "contextualTitle": "CommandTree - All"
        }
      ]
    },
    "commands": [
      {
        "command": "commandtree.refresh",
        "title": "Refresh Commands",
        "icon": "$(refresh)"
      },
      {
        "command": "commandtree.run",
        "title": "Run Command (New Terminal)",
        "icon": "$(play)"
      },
      {
        "command": "commandtree.runInCurrentTerminal",
        "title": "Run in Current Terminal",
        "icon": "$(play-circle)"
      },
      {
        "command": "commandtree.filter",
        "title": "Filter Commands",
        "icon": "$(search)"
      },
      {
        "command": "commandtree.filterByTag",
        "title": "Filter by Tag",
        "icon": "$(tag)"
      },
      {
        "command": "commandtree.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "commandtree.editTags",
        "title": "Edit Tags Configuration"
      },
      {
        "command": "commandtree.addToQuick",
        "title": "Add to Quick Launch",
        "icon": "$(star-empty)"
      },
      {
        "command": "commandtree.removeFromQuick",
        "title": "Remove from Quick Launch",
        "icon": "$(star-full)"
      },
      {
        "command": "commandtree.refreshQuick",
        "title": "Refresh Quick Launch",
        "icon": "$(refresh)"
      },
      {
        "command": "commandtree.addTag",
        "title": "Add Tag",
        "icon": "$(tag)"
      },
      {
        "command": "commandtree.removeTag",
        "title": "Remove Tag",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "commandtree.filter",
          "when": "view == commandtree",
          "group": "navigation@1"
        },
        {
          "command": "commandtree.filterByTag",
          "when": "view == commandtree",
          "group": "navigation@2"
        },
        {
          "command": "commandtree.clearFilter",
          "when": "view == commandtree && commandtree.hasFilter",
          "group": "navigation@3"
        },
        {
          "command": "commandtree.refresh",
          "when": "view == commandtree",
          "group": "navigation@4"
        },
        {
          "command": "commandtree.filter",
          "when": "view == commandtree-quick",
          "group": "navigation@1"
        },
        {
          "command": "commandtree.filterByTag",
          "when": "view == commandtree-quick",
          "group": "navigation@2"
        },
        {
          "command": "commandtree.clearFilter",
          "when": "view == commandtree-quick && commandtree.hasFilter",
          "group": "navigation@3"
        },
        {
          "command": "commandtree.refreshQuick",
          "when": "view == commandtree-quick",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "commandtree.run",
          "when": "view == commandtree && viewItem == task",
          "group": "inline@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree && viewItem == task",
          "group": "inline@3"
        },
        {
          "command": "commandtree.addToQuick",
          "when": "view == commandtree && viewItem == task",
          "group": "inline@4"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree && viewItem == task",
          "group": "1_run@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree && viewItem == task",
          "group": "1_run@2"
        },
        {
          "command": "commandtree.addToQuick",
          "when": "view == commandtree && viewItem == task",
          "group": "2_tags@1"
        },
        {
          "command": "commandtree.addTag",
          "when": "view == commandtree && viewItem == task",
          "group": "3_tagging@1"
        },
        {
          "command": "commandtree.removeTag",
          "when": "view == commandtree && viewItem == task",
          "group": "3_tagging@2"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "inline@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "inline@3"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "inline@4"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "1_run@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "1_run@2"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "2_tags@1"
        },
        {
          "command": "commandtree.addTag",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "3_tagging@1"
        },
        {
          "command": "commandtree.removeTag",
          "when": "view == commandtree && viewItem == task-quick",
          "group": "3_tagging@2"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "inline@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "inline@3"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "inline@4"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "1_run@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "1_run@2"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree-quick && viewItem == task",
          "group": "2_tags@1"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "inline@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "inline@3"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "inline@4"
        },
        {
          "command": "commandtree.run",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "1_run@1"
        },
        {
          "command": "commandtree.runInCurrentTerminal",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "1_run@2"
        },
        {
          "command": "commandtree.removeFromQuick",
          "when": "view == commandtree-quick && viewItem == task-quick",
          "group": "2_tags@1"
        }
      ]
    },
    "configuration": {
      "title": "CommandTree",
      "properties": {
        "commandtree.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.vscode-test/**",
            "**/vendor/**",
            "**/dist/**",
            "**/build/**",
            "**/out/**",
            "**/bin/**",
            "**/obj/**",
            "**/.git/**",
            "**/.hg/**",
            "**/.svn/**",
            "**/coverage/**",
            "**/__pycache__/**",
            "**/venv/**",
            "**/.venv/**",
            "**/env/**",
            "**/target/**",
            "**/Pods/**",
            "**/.gradle/**",
            "**/.idea/**",
            "**/.vs/**",
            "**/test/fixtures/**"
          ],
          "description": "Glob patterns to exclude from command discovery"
        },
        "commandtree.sortOrder": {
          "type": "string",
          "default": "folder",
          "enum": [
            "folder",
            "name",
            "type"
          ],
          "enumDescriptions": [
            "Sort by folder path, then alphabetically by name",
            "Sort alphabetically by command name",
            "Sort by command type, then alphabetically by name"
          ],
          "description": "How to sort commands within categories"
        }
      }
    },
    "configurationDefaults": {
      "workbench.tree.indent": 16
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "rebuild": "rm -rf out && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "npm run compile",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "mocha out/test/unit/**/*.test.js",
    "test:e2e": "vscode-test",
    "test:coverage": "vscode-test --coverage",
    "coverage:check": "c8 check-coverage --lines 90 --functions 90 --branches 90 --statements 90",
    "clean": "rm -rf node_modules out *.vsix coverage || true",
    "package": "npm run compile && vsce package",
    "uninstall": "code --uninstall-extension nimblesite.commandtree || true",
    "install-ext": "code --install-extension commandtree-*.vsix",
    "build-and-install": "npm run clean && npm install && npm run uninstall && npm run package && npm run install-ext"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^25.2.1",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.7.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "glob": "^13.0.1",
    "mocha": "^11.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  },
  "overrides": {
    "glob": "^13.0.1"
  }
}
